{
  "name": "forge-launcher",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.forge.builder",
    "productName": "FORGE",
    "extraResources": [
      {
        "from": "../dist/backend/forge-backend.exe",
        "to": "forge-backend.exe"
      },
      {
        "from": "../dist/frontend",
        "to": "frontend"
      }
    ],
    "win": {
      "icon": "icon.png",
      "target": ["nsis"]
    },
    "mac": {
      "icon": "icon.png",
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "main.js",
      "forge-builder.config.json",
      "package.json"
    ]
  }
}
